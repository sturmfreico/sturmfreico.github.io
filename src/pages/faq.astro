    ]}
  />

  <Features2
    title="Still have questions?"
    subtitle="Feel free to reach out to us for more information."
    columns={2}
    items={[
      {
        title: 'Social Media',
        description: 'Contact us on X or Instagram',
        icon: 'tabler:message-circle-2',
        classes: {
          icon: 'text-blue-500',
        },
      },
      {
        title: 'Email Us',
        description: 'support@sturmfrei.com.au',
        icon: 'tabler:mail',
        classes: {
          icon: 'text-blue-500',
        },
      },
    ]}
  />
</Layout>
